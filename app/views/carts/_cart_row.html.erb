<div class="well">
  <h4><%= cart_item.product.name %></h4>
  <%= form_tag update_item_path do %>
    <h4 class="text-right">Unit Price: <span style="color: green;"><%= cart_item.product.price %></span></h4>
    <div class="row">
      <div class="col-xs-4">
        <%= number_field_tag 'quantity', cart_item.quantity, class: 'form-control', min: 1 %>
        <%= hidden_field_tag 'product_id', cart_item.product.id %>
      </div>
      <div class="col-xs-8 text-right">
        <div class="btn-group">
          <%= submit_tag 'Update Quantity', class: 'btn btn-primary' %>
          <%= link_to 'delete', delete_item_path(product_id: cart_item.product.id), method: :delete, class: 'btn btn-danger' %>
        </div>
      </div>
    </div>
  <% end %>
</div>
